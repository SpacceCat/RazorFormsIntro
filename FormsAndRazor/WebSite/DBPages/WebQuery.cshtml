@{
    Page.Title = "DB WebGrid Display";
    Layout = "~/_Layout.cshtml";

    //access data from a Form uses .Form["controlname"]
    //accessing data from your url is done using .QueryString["identifierLabel"]
    //data return from QueryString is datatype string
    // if the identifierLabel does not exists, a null is returned
    var cid = Request.QueryString["cid"];

    // if there was no cid found, should one question how a user accessed this page
    // if there is no cid, this page will return the user to the appropriate search page which supplies the required parameter
    if(string.IsNullOrEmpty(cid))
    {
        Response.Redirect("MultiRecordQuery.cshtml");
    }
}

@section head
{
    <!-- put in a link to a custom .css file-->
    <link href="~/Content/MyCSS.css" rel="stylesheet" />
}
<div>
    @section banner
{
        <h1>Query Display: Web Grid</h1>
    }

    Category ID: @cid

    @section footer
{
        <p>
            &copy; CPSC1517, Nait Today's date is
            @DateTime.Today.ToLongDateString().
        </p>}
</div>